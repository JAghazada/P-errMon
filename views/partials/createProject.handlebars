<div
  class="modal fade modal-dialog"
  id="addProject"
  style="position:absolute; margin-left:40%; width:400px;"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Add your project
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">
            &times;
          </span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addProjectForm">
          <div class="form-group">
            <label for="project-name" class="col-form-label">
              Project Name:
            </label>
            <input type="text" class="form-control" id="project-name" />
          </div>
          <div class="form-group">
            <label for="url" class="col-form-label">
              Url:
            </label>
            <input class="form-control" id="url" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary" id="createProject">
          Create Project
        </button>
      </div>
    </div>
  </div>
</div>